<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="display-4">New event</h2>
  </div>
</div>

<h3></h3>
<%if @event.picture.attached?%>
  <%= image_tag @event.picture, alt: 'photo event' %>
<%else%>
  <p></p>
<%end%>

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
    <%= label_tag(:title, "Title:") %>
    <%= text_field_tag(:title,"", :class => 'form-control')%>
  </div>

  <div class="form-group">
    <%= label_tag(:description, "Description:") %>
    <%= text_area_tag(:description,"", :class => 'form-control')%>
  </div>

  <div class="form-group">
    <%= label_tag(:location, "Location:") %>
    <%= text_field_tag(:location, "", :class => 'form-control')%>
  </div>

  <div class="form-group">
    <%= label_tag(:price, "Prix:") %>
    <small> (Between 1 et 1000)</small>
    <%= text_field_tag(:price, "", :class => 'form-control')%>
  </div>

  <div class="form-group">
    <%= label_tag(:start_date, "Start:") %>
    <%= text_field_tag(:start_date, Time.now+1000 , :class => 'form-control')%>
  </div>

  <div class="form-group">
    <%= label_tag(:duration, "Duration:") %>
    <small> (Duration in minutes, fractions not allowed)</small>
    <%= text_field_tag(:duration,"",:class => 'form-control')%>
  </div>

		<div class="col-sm-12 d-flex justify-content-center  m-3">
			<%= submit_tag("Create the event", :class => "btn btn-primary") %>
		</div>

<% end %>